<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--price quamtity total-->

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">
            <TextView
                style="@style/cartTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NRS." />

            <TextView
                android:id="@+id/cartList_total"
                style="@style/cartTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75" />

        </LinearLayout>

        <!--End of price quantity total layout-->

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/cartList_btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/ic_action_cancel"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <!-- Start of IMAGE and Title  Layout-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cartList_thumbnail"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_testing"
                app:border_color="#c7c7c7"
                app:border_width="1dp" />

            <!--

            <ImageView
                android:id="@+id/cartList_thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_testing" />
                -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/cartList_title"
                        style="@style/cartTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cartTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Size" />

                    <TextView

                        android:id="@+id/cartList_size"
                        style="@style/cartTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cartTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color" />

                    <TextView
                        android:id="@+id/cartList_color"
                        style="@style/cartTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Red" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cartTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NRS." />

                    <TextView
                        android:id="@+id/cartList_price"
                        style="@style/cartTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25" />
                </LinearLayout>


            </LinearLayout>


            <!--  start of Quantity layout-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/cartList_quantity"
                    style="@style/cartTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <!--  End of Quantity layout-->


        </LinearLayout>


    </LinearLayout>

    <!-- End of IMAGE and Title  Layout-->


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>


</LinearLayout>