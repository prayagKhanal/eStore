<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CheckoutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f6846a</item>
        <item name="colorPrimaryDark">@color/statusBarBilling</item>
        <item name="android:statusBarColor">@color/statusBarBilling</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>

</resources>